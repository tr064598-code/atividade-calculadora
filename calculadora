const entrada = require('prompt-sync')({sigint: false});
function Soma( n1, n2){
return n1 + n2;
}
console.log(n1 + n2);

function Subtracao(n1, n2){
return n1 - n2; 
}
console.log(n1 - n2);

function Multiplicação(n1, n2){
return n1 * n2; 
}
console.log(n1 * n2);

function Divisão(n1, n2){
